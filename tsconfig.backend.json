{
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./backend",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["./backend/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
